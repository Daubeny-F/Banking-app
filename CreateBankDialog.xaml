<Window x:Class="BankingSystem.CreateBankDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Bank" Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create New Bank" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <Label Content="Bank Name:"/>
            <TextBox x:Name="BankNameTextBox"/>

            <Label Content="SWIFT Code:"/>
            <TextBox x:Name="SwiftCodeTextBox"/>

            <Label Content="Location:"/>
            <ComboBox x:Name="LocationComboBox"/>

            <Label Content="Country:"/>
            <ComboBox x:Name="CountryComboBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Create" Width="100" Click="Create_Click" Margin="5"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
